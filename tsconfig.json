{
    "compilerOptions": {
        "target": "ES5",
        "baseUrl": "/",
        "rootDir": "./",
        "jsx": "react",
        "module": "ES2015",
        "allowJs": true,
        "moduleResolution": "Node",
        "noUnusedLocals": true,
        "pretty": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "lib": ["ES2015","DOM"],
        "typeRoots": ["./typings"]
    },
    "exclude": ["node_modules", "**/node_modules/*"]
}